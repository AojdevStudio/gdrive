{
  "name": "@modelcontextprotocol/server-gdrive",
  "version": "2.0.0",
  "description": "MCP server for Google Workspace with operation-based tools (Sheets, Drive, Forms, Docs, Batch)",
  "license": "MIT",
  "author": "Anthropic, PBC (https://anthropic.com)",
  "homepage": "https://modelcontextprotocol.io",
  "bugs": "https://github.com/modelcontextprotocol/servers/issues",
  "type": "module",
  "bin": {
    "mcp-server-gdrive": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/__tests__/integration/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts'",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "1.0.4",
    "googleapis": "^144.0.0",
    "redis": "^5.6.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/jest": "^29.5.14",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "shx": "^0.3.4",
    "typescript": "^5.6.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0"
  }
}
